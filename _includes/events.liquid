{% if event.dates.start and event.dates.start %}
  {% assign sdate = event.dates.start | date: '%B %d, %Y'%}
  {% assign edate = event.dates.end | date: '%B %d, %Y'%}
  {% assign date = sdate | append: " - " | append: edate %}
{% else %}
  {% assign date = event.dates.day | date: '%B %d, %Y'%}
{% endif%}
<div class="grid-sizer"></div>
<div class="grid-item">
  <a href="{% if event.redirect %}{{ event.redirect }}{% else %}{{ event.url | relative_url }}{% endif %}">
    <div class="card hoverable">
      {% if event.img %}
        {%
          include figure.liquid
          loading="eager"
          path=event.img
          sizes = "250px"
          alt="event thumbnail"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ event.title }}</h2>
        <p class="card-text">{{ event.description }}</p>
        <p class="card-text">{{ date }}</p>
        <p class="card-text">{{ event.location }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if event.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ event.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if event.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ event.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
